<% layout("/layouts/boilerplate") %>
<body>
  <style>
    #filters{
      display:flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-left: 1rem;
      margin-top: 1rem;
      opacity: 0.9;
      font-size: 0.8rem;
    }
    
    .filter:hover{
      opacity: 1.2;
      cursor: pointer;
    }

   .tax-info {
    display: none;
   }

   .tax-switch{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.6rem;
    padding: 1rem;
    margin-left: 1rem;
    display: flex;
    align-items: center;
   }

  </style>
  <%= success %>  
  <div id="filters">
   
   <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div> 
    Rooms
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div> 
    Camping
  </div>
 
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div> 
    Mountains
  </div> 
  <div class="filter">
    <div><i class="fa-solid fa-chess"></i></div> 
    Castles
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-volleyball"></i></i></div> 
    Games
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-route"></i></div> 
    Routes
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-phone"></i></div> 
    Phone
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-users-viewfinder"></i></div> 
    Views
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-landmark"></i></div> 
    Historical places
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div> 
    Snowflake
  </div>
  <div class="tax-switch">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
    <% for(let listing of allListings){ %>

      <a href="/listings/<%= listing._id %>"class="listing-link">
        <div class="card col listing-card" style="width: 20rem;">
          <img src="<%=listing.image.url %>"class="card-img-top"alt="listing_image"style="height: 15rem;"/>
           <div class="card-img-overlay"></div><!--for written something on card -->


          <div class="card-body">
            <p class="card-text">
              <b><%=listing.title %></b><br>
              &#8377;<%=listing.price?.toLocaleString("en-IN") %>/Day
              <i class="tax-info">&nbsp;+18%GST</i><br>
              <%=listing.location %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
    <script>
      let taxSwitch=document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click",()=>{
       let taxInfo =document.getElementsByClassName("tax-info");
       for(info of taxInfo){
        if(info.style.display !="inline"){
        info.style.display="inline";
       }else{
        info.style.display="none";
       }
      }
      });
    </script>
  

  
</body>

   

